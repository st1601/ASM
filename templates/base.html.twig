<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Student Management System
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
		<!-- CSS only -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		{% endblock %}

		{% block javascripts %}
		<!-- JavaScript Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block nav %}
		<div class="p-3 mb-2 bg-info text-white">
		<nav class="navbar navbar-dark bg-dark">
			 <ul class="nav nav-pills nav-fill">
				  <li class="nav-item active">
						<h3><a class="nav-link" href="{{ path('home') }}">Home</a></h3>
				  </li>
				  <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('student_index') }}">Student</a></h3>
				  </li>
				  <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('room_index')}}">Room</a></h3>
				  </li>
				   <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('course_index')}}">Course</a></h3>
				  </li>
                  <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('semester_index')}}">Semester</a></h3>
				  </li>
                  <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('teacher_index')}}">Teacher</a></h3>
				  </li>
                  <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('subject_index')}}">Subject</a></h3>
				  </li>
				   <li class="nav-item">
						<h3><a class="nav-link" href="{{ path('app_logout')}}">Logout</a></h3>
				  </li>
			 </ul>
		</nav>
		{% endblock %}
		   {% block flash %}
			<div class="container col-md-8 mt-3">
				{% for flash in app.flashes("Error") %}
					<p class="alert alert-danger"> {{ flash }} </p>
				{% endfor %}
				{% for flash in app.flashes("Success") %}
					<p class="alert alert-success"> {{ flash }} </p>
				{% endfor %}
			</div>
		{% endblock %}
		{% block body %} {% endblock %}
		{% block copyright %}
		<div class="text-primary">
			<h4>
				<i class="fa fa-copyright" aria-hidden="true">
					Copyright by Group 4
				</i>
			</h4>
		{% endblock %}
	</body>
</html>
