{% extends "base.html.twig" %}

{% block title %} Add Course {% endblock %}

{% block body %}
<div class="p-3 mb-2 bg-info text-white">
   <h3 class="text-center mt-5">ADD NEW Course</h3>
      {{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name,
               {
                  'attr': { 'class' : 'form-label'}
               })
            }}
		</div>
				<div class="form-group">
					{{ form_label(form.grade) }}
					{{ form_widget(form.grade,
               {
                  'attr': { 'class' : 'form-label'}
               })
            }}
				</div>

			</div>
			<div class="form-group">
         {{ form_label (form.teachers) }}
         {{ form_widget (form.teachers,
            {
               'attr' : {'class' : 'form-label'}
            })
         }}
      </div>
			<div class="form-group text-center mt-3 mb-4">
				<button class="btn btn-secondary" type="submit">ADD</button>
			</div>
			{{ form_end(form) }}
</div>
{% endblock %}